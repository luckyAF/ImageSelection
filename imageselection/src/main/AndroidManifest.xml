<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.luckyaf.imageselection">


    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity
            android:name=".ui.ImageSelectionActivity"
            android:theme="@style/BaseAppTheme"/>
        <activity android:name=".internal.ui.ImagePreviewActivity"
                android:theme="@style/BaseAppTheme"/>
        <activity android:name=".internal.ui.SelectedPreviewActivity"
                  android:theme="@style/BaseAppTheme"/>
        <provider
            android:name=".internal.utils.ImageSelectionFileProvider"
            android:authorities="com.luckyaf.imageselection.provider"
            android:exported="false"
            android:grantUriPermissions="true"
            tools:replace="name,authorities,exported,grantUriPermissions">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/image_selection_file_paths"
                tools:replace="name,resource" />
        </provider>
    </application>

</manifest>